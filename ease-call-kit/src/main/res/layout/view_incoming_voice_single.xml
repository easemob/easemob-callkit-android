<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_incoming_voice_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/callkit_decline"
        app:layout_constraintEnd_toStartOf="@id/iv_incoming_voice_accept"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@id/tv_incoming_voice_decline"/>

    <TextView
        android:id="@+id/tv_incoming_voice_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        android:layout_marginBottom="50dp"
        android:text="@string/callkit_decline"
        android:textColor="@color/callkit_neutral_98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_incoming_voice_decline"
        app:layout_constraintStart_toStartOf="@id/iv_incoming_voice_decline"
        app:layout_constraintTop_toBottomOf="@id/iv_incoming_voice_decline" />

    <ImageView
        android:id="@+id/iv_incoming_voice_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/callkit_accept_tel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_incoming_voice_decline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_incoming_voice_accept"/>

    <TextView
        android:id="@+id/tv_incoming_voice_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="50dp"
        android:text="@string/callkit_accept"
        android:textSize="14sp"
        android:textColor="@color/callkit_neutral_98"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_incoming_voice_accept"
        app:layout_constraintStart_toStartOf="@id/iv_incoming_voice_accept"
        app:layout_constraintTop_toBottomOf="@id/iv_incoming_voice_accept" />


</androidx.constraintlayout.widget.ConstraintLayout>